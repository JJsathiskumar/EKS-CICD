pipeline {
tools {
maven 'Maven3'
}
agent any
environment {
registry = "165008443062.dkr.ecr.ap-south-1.amazonaws.com/ecrcicd"
}
stages {
stage('Cloning Git') {
steps {
checkout([$class: 'GitSCM', branches: [[name: '*/main']],
doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [],
userRemoteConfigs: [[credentialsId: '', url: 'https://github.com/JJsathiskumar/EKS-Jenkins-CICD-pipe.git']]])
}
}
stage ('Build') {
steps {
sh 'mvn clean install'
}
}

// Building Docker images
stage('Building image') {
steps{
script {
dockerImage = docker.build registry
}
}
}
// Uploading Docker images into AWS ECR
stage('Pushing to ECR') {
steps{
script {
sh 'aws ecr get-login-password --region up-south-1 | docker login --username AWS --password-stdin 165008443062.dkr.ecr.ap-south-1.amazonaws.com/firstecr'
sh 'docker push 165008443062.dkr.ecr.ap-south-1.amazonaws.com/firstecr'
}
}
}
stage('K8S Deploy') {
steps{
script {
withKubeConfig([credentialsId: 'K8S', serverUrl: '']) {
sh ('kubectl apply -f eks-deploy-k8s.yaml')
}
}
}
}
}
}
